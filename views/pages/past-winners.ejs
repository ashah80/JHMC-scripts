    function renderWinners(year, mode) {
        // If Virtual, show Combined A & AA in a single column
        const columnsDiv = document.querySelector('.columns');
        if (mode === "Virtual") {
            columnsDiv.innerHTML = '';
            const combinedData = winnersData[year][mode]["Combined A & AA"];
            if (!combinedData) {
                columnsDiv.innerHTML = '<div class="division"><h2>Combined A & AA</h2><div>No data available.</div></div>';
                return;
            }
            let html = `<div class="division"><h2>Combined A & AA</h2>`;
            for (const category in combinedData) {
                html += `<div class="category"><h3>${category}</h3><ul class="winner-list">`;
                combinedData[category].forEach(entry => {
                    if (entry.name) {
                        html += `<li>${entry.name ? entry.name : '<span style=\"color:#bbb;\">No winner entered</span>'}${entry.score ? ` <span style=\"color:#888;\">(${entry.score})</span>` : ''}</li>`;
                    } else {
                        html += `<li style=\"color:#bbb;\">No winner entered</li>`;
                    }
                });
                html += `</ul></div>`;
            }
            html += `</div>`;
            columnsDiv.innerHTML = html;
        } else {
            // Restore the original columns HTML
            columnsDiv.innerHTML = `
                <div class="division">
                    <h2>Division A</h2>
                    <div class="category">
                        <h3>7th Grade Individual</h3>
